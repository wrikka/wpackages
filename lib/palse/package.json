{
  "name": "@wpackages/palse",
  "version": "0.0.1",
  "private": true,
  "packageManager": "bun@1.3.5",
  "type": "module",
  "description": "Experimental reactive core (signals/effects) aiming to be a better Vue alternative",
  "keywords": [
    "signals",
    "reactivity",
    "effect",
    "computed",
    "functional",
    "typescript"
  ],
  "author": "wrikka",
  "license": "MIT",
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "bun run src/index.ts",
    "watch": "tsdown --watch",
    "format": "biome format --write",
    "lint": "tsc --noEmit && biome lint --write",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "build": "tsdown --exports --dts --minify",
    "verify": "bun run format && bun run lint && bun run test && bun run build"
  },
  "dependencies": {},
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/bun": "^1.3.5",
    "tsdown": "^0.18.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "module": "./dist/index.mjs"
}
