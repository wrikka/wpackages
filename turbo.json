{
	"$schema": "https://turbo.build/schema.json",
	"ui": "stream",
	"globalDependencies": ["**/.env.*", "tsconfig.json", "package.json", "turbo.json"],
	"concurrency": "32",
	"tasks": {
		"start": {
			"cache": false,
			"persistent": true
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"prepare": {
			"cache": false
		},
		"format": {
			"dependsOn": ["^prepare"]
		},
		"lint": {
			"dependsOn": ["^format"]
		},
		"test": {
			"dependsOn": ["^lint"]
		},
		"build": {
			"dependsOn": ["^lint", "^test"],
			"outputs": [".output/**", "target/release/**", "dist/**"]
		},
		"verify": {
			"dependsOn": ["^test"]
		},
		"preview": {
			"dependsOn": ["^verify"]
		}
	}
}
