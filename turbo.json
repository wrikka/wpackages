{
	"$schema": "https://turbo.build/schema.json",
	"ui": "stream",
	"globalDependencies": [
		"**/.env.*",
		"tsconfig.json",
		"package.json",
		"turbo.json",
		"bun.lockb"
	],
	"concurrency": "100",
	"tasks": {
		"watch": {
			"cache": false,
			"persistent": true
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"prepare": {
			"cache": false
		},
		"format": {
			"dependsOn": ["^prepare"],
			"cache": false
		},
		"lint": {
			"dependsOn": ["^format"],
			"cache": false
		},
		"typecheck": {
			"dependsOn": ["^lint"]
		},
		"test": {
			"dependsOn": ["^lint"],
			"cache": true
		},

		"test:coverage": {
			"dependsOn": ["^lint"]
		},
		"wtest": {
			"dependsOn": ["^lint"]
		},
		"build": {
			"dependsOn": ["^lint"],
			"outputs": [],
			"cache": false
		},
		"verify": {
			"dependsOn": ["^test"],
			"cache": false
		},
		"preview": {
			"dependsOn": ["^verify"]
		}
	}
}
