{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"noEmit": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"types": ["bun-types"]
	},
	"include": ["*.cjs", "*.d.ts", "scripts/**/*.mjs"],
	"exclude": ["node_modules"]
}
