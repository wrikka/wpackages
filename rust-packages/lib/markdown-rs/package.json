{
	"name": "markdown-rs",
	"version": "0.0.0",
	"main": "pkg/index.js",
	"types": "pkg/index.d.ts",
	"type": "module",
	"napi": {
		"binaryName": "markdown-rs",
		"triples": []
	},
	"scripts": {
		"dev": "napi watch",
		"build": "napi build --release --output-dir pkg",
		"test": "bun test",
		"bench": "bun run benches/bench-in-node.mjs",
		"bench:rust": "cargo bench --bench bench-in-rust --",
		"lint": "cargo check && cargo clippy --all-targets --all-features -- -D warnings",
		"format": "biome format --write .",
		"verify": "tsc --noEmit",
		"clean": "cargo clean"
	},
	"devDependencies": {
		"@napi-rs/cli": "^3.5.1",
		"bun-types": "1.3.5",
		"comrak": "^0.4.2",
		"execa": "^9.6.1",
		"hyperfine": "^1.0.0",
		"markdown-it": "^14.1.1",
		"marked": "^17.0.3",
		"picocolors": "^1.1.1",
		"prettier": "^3.8.1",
		"pulldown-cmark-wasm": "^0.1.0",
		"remarkable": "^2.0.1",
		"showdown": "^2.1.0",
		"tinybench": "^6.0.0",
		"typescript": "^5.9.3"
	},
	"dependencies": {}
}
