{
	"compilerOptions": {
		"allowUnreachableCode": false,
		"allowUnusedLabels": false,
		// Path Aliases for Monorepo
		"paths": {
			"@wpackages/*": [
				"./packages/*/src",
				"./utils/*/src",
				"./services/*/src",
				"./apps/*/src"
			],
			"@w/*": ["./rules/*"]
		},
		"composite": false,
		"downlevelIteration": true,
		// Emit
		"declaration": true,
		"declarationMap": true,
		// Interop Constraints
		"esModuleInterop": true,
		"exactOptionalPropertyTypes": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": false,
		"isolatedModules": true,
		"lib": ["ESNext", "DOM"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"noEmit": false,
		"noFallthroughCasesInSwitch": true,
		"noImplicitOverride": true,
		"noPropertyAccessFromIndexSignature": true,
		"noUncheckedIndexedAccess": true,
		// Unused Code
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"resolveJsonModule": true,
		// Performance
		"skipLibCheck": true,
		"sourceMap": true,
		// Type Checking - Strict Mode
		"strict": true,
		"useUnknownInCatchVariables": true,
		// Language and Environment
		"target": "ESNext",
		"types": ["bun-types"]
	},
	"exclude": [
		"node_modules",
		"dist",
		"build",
		".turbo",
		"coverage",
		"**/*.test.ts",
		"**/*.spec.ts",
		"packages/webcontainer",
		"packages/monorepo",
		"packages/markdown",
		"apps/cli/check",
		"apps/cli/dotfiles-manager",
		"apps/cli/git"
	]
}
