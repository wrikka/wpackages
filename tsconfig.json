		"resolveJsonModule": true,
		// Performance
		"skipLibCheck": true,
		"sourceMap": true,
		// Type Checking - Strict Mode
		"strict": true,
		// Language and Environment
		"target": "ESNext",
		"types": [
			"@types/bun"
		]
	},
	"exclude": [
		"node_modules",
		"dist",
		"build",
		".turbo",
		"coverage",
		"**/*.test.ts",
		"**/*.spec.ts",
		"packages/webcontainer",
		"packages/monorepo",
		"packages/markdown",
		"apps/cli/check",
		"apps/cli/dotfiles-manager",
		"apps/cli/git"
	]
}