			],
			// Tools
			"ts-analyzer": [
				"packages/tools/ts-analyzer/src"
			],
			"pure.types": [
				"packages/pure/types/src"
			],
			"schema": [
				"packages/lib/schema/src"
			],
			"pure.analyzer": [
				"packages/pure/analyzer/src"
			],
			"pure.explainer": [
				"packages/api-integrations/base/src"
			],
			"stripe": [
				"packages/api-integrations/stripe/src"
			],
			"sendgrid": [
				"packages/api-integrations/sendgrid/src"
			],
			// Frontend - Vitext Framework
			"canvas": [
				"packages/canvas/src"
			],
			"vitext-router": [
				"packages/vitext/plugins/router/src"
			],
			"vitext-ssr": [
				"packages/vitext/vitext-ssr/src"
			],
			"vitext-store": [
				"packages/vitext/plugins/store/src"
