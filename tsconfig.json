{
	"compilerOptions": {
		"allowUnreachableCode": false,
		"allowUnusedLabels": false,
		// Path Aliases for Monorepo
		"baseUrl": ".",
		"composite": false,
		"downlevelIteration": true,
		// Emit
		"declaration": true,
		"declarationMap": true,
		// Interop Constraints
		"esModuleInterop": true,
		"exactOptionalPropertyTypes": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": false,
		"isolatedModules": true,
		"lib": [
			"ESNext",
			"DOM"
		],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"noEmit": false,
		"noFallthroughCasesInSwitch": true,
		"noImplicitOverride": true,
		"noPropertyAccessFromIndexSignature": true,
		"noUncheckedIndexedAccess": true,
		// Unused Code
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"paths": {
			"effect": [
				"packages/primitives/effect/src"
			],
			"models": [
				"packages/framework/ai/models/src"
			],
			"ai-agents": [
				"packages/framework/ai/agents/src"
			],
			"ai-metrics": [
				"packages/framework/observability/ai-metrics/src"
			],
			"ai-models": [
				"packages/framework/ai/ai-models/src"
			],
			// AI
			"ai-runtime": [
				"packages/framework/ai/ai-runtime/src"
			],
			"auth": [
				"packages/framework/security/auth/src"
			],
			"browser-use": [
				"packages/adapters/browser-use/src"
			],
			"caching": [
				"packages/caching/src"
			],
			"computer-use": [
				"packages/framework/ai/computer-use/src"
			],
			// Config
			"config-manager": [
				"packages/lib/config-manager/src"
			],
			"data-types": [
				"packages/utils/src/data-types"
			],
			// Infrastructure
			"database": [
				"packages/lib/database/src"
			],
			"diagram-viz": [
				"packages/tools/diagram-viz/src"
			],
			"email": [
				"packages/framework/messaging/email/src"
			],
			"env-manager": [
				"packages/lib/env-manager/src"
			],
			"error-handling": [
				"packages/primitives/error-handling/src"
			],
			"event-bus": [
				"packages/framework/messaging/event-bus/src"
			],
			"fetch-api": [
				"packages/lib/fetch-api/src"
			],
			"file-system": [
				"packages/lib/file-system/src"
			],
			"functional": [
				"packages/primitives/functional/src"
			],
			"program": [
				"framework/program/src"
			],
			"dns": [
				"packages/lib/dns/src"
			],
			"function": [
				"packages/primitives/function/src"
			],
			"utils": [
				"packages/utils/src"
			],
			"package-manager": [
				"packages/package-manager/src"
			],
			"health-checks": [
				"packages/framework/observability/health-checks/src"
			],
			"loader": [
				"packages/services/loader/src"
			],
			"loader-manager": [
				"packages/lib/loader-manager/src"
			],
			"logger": [
				"packages/framework/observability/logger/src"
			],
			"metrics": [
				"packages/framework/observability/metrics/src"
			],
			"notification": [
				"packages/framework/messaging/notification/src"
			],
			"operators": [
				"packages/primitives/operators/src"
			],
			"parallel": [
