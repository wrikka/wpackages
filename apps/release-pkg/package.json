{
  "bin": {
    "wrelease": "./dist/bin/cli.js",
    "wts-release": "./dist/bin/cli.js",
    "wrelease-preview": "./dist/bin/preview.js"
  },
  "dependencies": {
    "execa": "^9.6.1",
    "glob": "^11.1.0",
    "picocolors": "^1.1.1"
  },
  "description": "Modern release automation tool - Better than release-it with Effect-TS",
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "@types/node": "^24.10.4",
    "tsdown": "^0.15.12",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "keywords": [
    "cli",
    "release",
    "version",
    "changelog",
    "git",
    "npm",
    "publish",
    "effect-ts",
    "functional",
    "automation"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "name": "@wpackages/release-pkg",
  "scripts": {
    "build": "tsdown --exports --dts --minify",
    "dev": "bun --watch src/bin/cli.ts",
    "lint": "tsc --noEmit && oxlint --fix",
    "review": "bun lint && bun test",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "bun run build"
  },
  "type": "module",
  "types": "./dist/index.d.ts",
  "version": "0.1.0"
}
