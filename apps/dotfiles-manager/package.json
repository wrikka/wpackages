{
	"name": "wdotfiles",
	"description": "A simple dotfiles manager inspired by chezmoi",
	"repository": {
		"type": "git",
		"url": "https://github.com/your-username/dotfiles-manager.git"
	},
	"type": "module",
	"bin": {
		"wdotfiles": "./dist/index.js"
	},
	"scripts": {
		"build": "tsdown --exports --dts --minify",
		"postbuild": "bun link",
		"dev": "bun --watch src/index.ts",
		"lint": "tsc --noEmit && oxlint --fix",
		"release": "release-it",
		"prepare": "lefthook install"
	},
	"dependencies": {
		"@clack/prompts": "^0.11.0",
		"c12": "3.3.1",
		"commander": "^14.0.2",
		"mustache": "^4.2.0",
		"picocolors": "^1.1.1",
		"zod": "4.1.12",
		"zod-to-json-schema": "^3.25.1"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@types/mustache": "^4.2.6",
		"lefthook": "^2.0.13",
		"release-it": "^19.2.2",
		"tsdown": "^0.15.12",
		"typescript": "^5.9.3"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": "./dist/index.js",
		"./package.json": "./package.json"
	},
	"version": "0.0.2"
}
