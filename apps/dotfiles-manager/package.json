{
	"name": "@wpackages/dotfiles-manager",
	"description": "A simple dotfiles manager inspired by chezmoi",
	"repository": {
		"type": "git",
		"url": "https://github.com/your-username/dotfiles-manager.git"
	},
	"type": "module",
	"bin": {
		"wdotfiles": "./dist/index.js"
	},
	"scripts": {
		"watch": "bun lint && bun watch && bun test",
		"start": "bun --watch dev && vitest:ui",
		"dev": "bun run src/index.ts",
		"lint": "oxlint --fix",
		"build": "tsdown",
		"format": "dprint fmt",
		"test": "vitest --run --passWithNoTests",
		"verify": "bun format && bun lint && bun test && bun audit && run build"
	},
	"dependencies": {
		"@clack/prompts": "^0.11.0",
		"c12": "3.3.3",
		"commander": "^14.0.2",
		"eta": "^4.5.0",
		"mustache": "^4.2.0",
		"picocolors": "^1.1.1",
		"zod": "4.2.1",
		"zod-to-json-schema": "^3.25.1"
	},
	"devDependencies": {
		"@types/bun": "1.3.5",
		"@types/mustache": "^4.2.6",
		"@vitest/coverage-v8": "^4.0.18",
		"dprint": "^0.50.2",
		"oxlint": "^1.42.0",
		"oxlint-tsgolint": "^0.10.1",
		"release-it": "^19.2.4",
		"tsdown": "^0.18.4",
		"typescript": "^5.9.3"
	},
	"main": "./dist/index.mjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.mts",
	"exports": {
		".": "./dist/index.mjs",
		"./package.json": "./package.json"
	},
	"version": "0.0.2",
	"packageManager": "bun@1.3.7"
}
