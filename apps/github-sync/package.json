		"oxlint": "^1.35.0",
		"tsdown": "^0.18.3",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16"
	},
	"module": "./dist/index.mjs",
	"exports": {
		".": "./dist/index.mjs",
