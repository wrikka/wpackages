{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "skipDefaultLibCheck": true,
    "moduleResolution": "bundler"
  },
  "exclude": [
    "node_modules",
    "dist",
    "examples"
  ],
  "include": [
    "src/**/*"
  ]
}