{
  "name": "linter",
  "version": "0.1.0",
  "private": true,
  "bin": {
    "wlint": "./dist/cli.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsdown --exports --dts --minify",
    "dev": "tsdown --watch",
    "lint": "tsc --noEmit && oxlint --fix",
