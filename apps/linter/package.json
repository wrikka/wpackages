{
  "name": "@wpackages/linter",
  "version": "0.1.0",
  "private": true,
  "bin": {
    "wlint": "./dist/cli.js"
  },
  "type": "module",
  "scripts": {
    "watch": "bun lint && bun watch && bun test",
    "start": "bun --watch dev && vitest:ui",
    "postinstall": "bun -e \"process.exit(0)\"",
    "dev": "bun run src/index.ts",
    "lint": "tsc --noEmit && biome lint --write",
    "build": "tsdown",
    "format": "biome format --write",
    "test": "vitest --run",
    "verify": "bun format && bun lint && bun test && bun audit && run build"
  },
  "dependencies": {
    "@wpackages/bench": "workspace:*",
    "effect": "^3.19.13",
    "@wpackages/parser": "workspace:*",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@types/node": "^24.10.4",
    "oxlint": "^1.35.0",
    "tsdown": "^0.15.12",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "packageManager": "bun@1.3.5"
}
