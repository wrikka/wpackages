{
	"name": "terminal-app",
	"private": true,
	"packageManager": "bun@1.3.9",
	"type": "module",
	"scripts": {
		"postinstall": "cargo update && nuxt prepare",
		"dev": "concurrently \"bun run dev:tauri\" \"bun run dev:nuxt\"",
		"dev:tauri": "cargo tauri dev",
		"dev:nuxt": "nuxt dev",
		"dev:build": "cargo build",
		"build": "nuxt build && cargo tauri build",
		"build:nuxt": "nuxt build",
		"preview": "nuxt preview",
		"check": "cargo check",
		"format": "cargo fmt --all && dprint fmt",
		"lint": "cargo fmt -- --check && nuxt typecheck",
		"test": "cargo test --all-features",
		"test:nextest": "cargo nextest run --all-features --verbose",
		"build:windows": "cargo build --release --target x86_64-pc-windows-msvc",
		"build:linux": "cargo build --release --target x86_64-unknown-linux-gnu",
		"build:mac": "cargo build --release --target x86_64-apple-darwin",
		"build:wasm": "wasm-pack build --out-dir pkg --target bundler",
		"build:node": "napi build --release",
		"audit": "cargo audit",
		"deny": "cargo deny check",
		"verify": "bun run format -- --check && bun run lint && bun run test:nextest && cargo audit && cargo deny check",
		"verify:ci": "bun run format -- --check && bun run lint && bun run test:nextest --ci && cargo audit && cargo deny check",
		"check:memory": "cargo build --release && valgrind --leak-check=full ./target/release/tui",
		"check:memory:heap": "cargo build --release && heaptrack ./target/release/tui",
		"check:memory:miri": "cargo +nightly miri test",
		"check:memory:asan": "RUSTFLAGS='-Z sanitizer=address' cargo +nightly test",
		"check:cpu": "cargo flamegraph --release",
		"check:cpu:stat": "cargo build --release && perf stat ./target/release/tui",
		"check:cpu:perf": "cargo build --release && perf record ./target/release/tui",
		"check:gpu:intel": "intel_gpu_top",
		"check:gpu:nvidia": "nvidia-smi dmon",
		"check:gpu:amd": "radeontop",
		"bench": "cargo bench"
	},
	"dependencies": {
		"@iconify-json/lucide": "^1.2.92",
		"@nuxtjs/tailwindcss": "^6.14.0",
		"@pinia/nuxt": "^0.11.3",
		"@unocss/nuxt": "^66.6.0",
		"@vueuse/core": "^14.2.1",
		"@vueuse/nuxt": "^14.2.1",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"copy-to-clipboard": "^3.3.3",
		"date-fns": "^4.1.0",
		"dexie": "^4.3.0",
		"diff": "^8.0.3",
		"file-saver": "^2.0.5",
		"fuse.js": "^7.1.0",
		"idb": "^8.0.3",
		"immer": "^11.1.4",
		"jszip": "^3.10.1",
		"lodash-es": "^4.17.23",
		"nanoid": "^5.1.6",
		"nuxt": "^4.3.1",
		"pinia": "^3.0.4",
		"tailwind-merge": "^3.5.0",
		"vue": "^3.5.28",
		"vue-router": "^4.6.4",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@iconify-json/lucide": "^1.2.92",
		"@nuxt/typescript": "^2.8.1",
		"concurrently": "^9.2.1",
		"dprint": "^0.51.1",
		"typescript": "^5.9.3",
		"unocss": "^66.6.0"
	}
}
