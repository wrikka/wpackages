{
  "name": "@wpackages/linter",
  "version": "0.1.0",
  "private": true,
  "bin": {
    "wlint": "./dist/src/cli.js"
  },
  "type": "module",
  "scripts": {
    "watch": "bun lint && bun watch && bun test",
    "start": "bun --watch dev && vitest:ui",
    "dev": "bun run src/index.ts",
    "lint": "oxlint --fix --type-aware",
    "build": "tsc",
    "test": "vitest --run",
    "verify": "bun format && bun lint && bun test && bun audit && run build",
    "format": "dprint fmt"
  },
  "dependencies": {
    "@ast-grep/napi": "^0.40.5",
    "@wpackages/parser": "workspace:*",
    "citty": "^0.2.0",
    "effect": "^3.19.15",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "oxc-parser": "0.111.0",
    "oxlint": "^1.42.0",
    "tsdown": "^0.20.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "packageManager": "bun@1.3.8"
}
