{
	"name": "@wpackages/unused",
	"version": "0.1.0",
	"description": "Find unused files, dependencies and exports in your JavaScript/TypeScript projects.",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"bin": {
		"unused": "./dist/cli.js"
	},
	"scripts": {
		"build": "bun build src/index.ts --external:@oxc-parser/binding-wasm32-wasi",
		"postbuild": "bun link",
		"dev": "tsc --watch",
		"lint": "tsc --noEmit && oxlint --fix --type-aware",
		"format": "dprint fmt",
		"scan": "bunx sg scan",
		"check": "bun dist/cli.js",
		"test": "bun test src/**/*.test.ts",
		"test:coverage": "bun test --coverage src/**/*.test.ts",
		"update:deps": "bunx taze -r -w && ni",
		"review": "bun update:deps && bun format && bun lint && bun test",
		"watch": "bun --watch src/index.ts"
	},
	"keywords": [
		"unused",
		"dead-code",
		"dependencies",
		"exports",
		"typescript",
		"javascript"
	],
	"author": "newkub",
	"license": "MIT",
	"dependencies": {
		"@oxc-parser/binding-wasm32-wasi": "0.106.0",
		"@types/glob": "^9.0.0",
		"@wpackages/config-manager": "workspace:*",
		"@wpackages/parser": "workspace:*",
		"@wpackages/reporter": "workspace:*",
		"commander": "^12.1.0",
		"glob": "^13.0.5",
		"picomatch": "^4.0.3",
		"typescript": "^5.9.3"
	},
	"devDependencies": {
		"@types/node": "^20.19.33",
		"@types/picomatch": "^2.3.4",
		"@wpackages/test": "workspace:*"
	}
}
