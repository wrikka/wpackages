{
	"name": "@wpackages/formatter",
	"version": "0.1.0",
	"private": true,
	"bin": {
		"wformat": "./dist/cli.js"
	},
	"type": "module",
	"engines": {
		"bun": ">=1.3.5"
	},
	"scripts": {
		"watch": "bun --watch verify",
		"dev": "bun run src/index.ts",
		"format": "dprint fmt",
		"lint": "oxlint --fix --type-aware",
		"build": "tsdown",
		"test": "vitest --run",
		"verify": "bun run format && bun audit && bun run lint && bun run test && bun run build"
	},
	"dependencies": {
		"@effect/schema": "^0.75.5",
		"@wpackages/cli-builder": "workspace:*",
		"@wpackages/cli-components": "workspace:*",
		"@wpackages/config-manager": "workspace:*",
		"@wpackages/logger": "workspace:*",
		"@wpackages/plugins-system": "workspace:*",
		"effect": "^3.19.15",
		"picocolors": "^1.1.1"
	},
	"devDependencies": {
		"@types/bun": "1.3.5",
		"@types/node": "^25.1.0",
		"dprint": "^0.50.2",
		"oxlint": "^1.42.0",
		"tsdown": "^0.18.4",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18"
	},
	"main": "./dist/cli.js",
	"module": "./dist/cli.js",
	"types": "./dist/cli.d.ts",
	"exports": {
		".": "./dist/cli.js",
		"./package.json": "./package.json"
	},
	"packageManager": "bun@1.3.8"
}
