{
  "name": "@wpackages/reporter",
  "version": "0.1.0",
  "description": "Report formatting utilities",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "private": true,
  "engines": {
    "bun": ">=1.3.5"
  },
  "scripts": {
    "lint": "oxlint --fix --type-aware",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "test": "bun test",
    "watch": "bun --watch src/index.ts",
    "dev": "bun run src/index.ts",
    "format": "dprint fmt"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
