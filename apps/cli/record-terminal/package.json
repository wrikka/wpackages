{
  "name": "@wpackages/record-terminal",
  "version": "0.0.1",
  "private": true,
  "description": "A CLI tool to record terminal sessions and convert them to GIF or MP4.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "record-terminal": "dist/index.js"
  },
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun run prebuild && bun run build:wasm && bun run build:ts",
    "build:wasm": "wasm-pack build ./core --target nodejs --out-dir ./dist",
    "prebuild": "pwsh -Command \"if (Test-Path ./dist) { Remove-Item -Recurse -Force ./dist }; New-Item -ItemType Directory -Path ./dist\"",
    "build:ts": "tsup src/index.ts --format esm --dts --minify",
    "start": "bun dist/index.js",
    "lint": "oxlint .",
    "test": "vitest",
    "watch": "bun --watch src/index.ts",
    "format": "dprint fmt"
  },
  "keywords": [
    "terminal",
    "recorder",
    "gif",
    "mp4",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "commander": "^12.1.0",
    "execa": "^8.0.1",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.19.30",
    "oxlint": "^0.3.5",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^1.6.1",
    "wasm-pack": "^0.13.1"
  }
}
