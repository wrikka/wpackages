{
  "name": "aicommit",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "bin": {
    "aicommit": "./index.ts"
  },
  "scripts": {
    "start": "bun run index.ts",
    "test": "vitest",
    "lint": "oxlint . && tsc --noEmit",
    "verify": "tsc --noEmit",
    "hook:install": "bun run src/hooks/install.ts install",
    "hook:uninstall": "bun run src/hooks/install.ts uninstall"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "oxlint": "^1.48.0",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.1",
    "ofetch": "^1.5.1",
    "picocolors": "^1.1.1"
  }
}
