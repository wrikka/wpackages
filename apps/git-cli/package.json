{
	"name": "git-cli",
	"version": "1.0.0",
	"description": "Interactive Git CLI tool with clack prompts",
	"main": "./dist/index.js",
	"bin": {
		"git-cli": "dist/app.js"
	},
	"type": "module",
	"scripts": {
		"watch": "bun lint && bun watch && bun test",
		"start": "bun --watch dev && vitest:ui",
		"dev": "bun run src/index.ts",
		"lint": "oxlint --fix",
		"build": "tsdown",
		"format": "dprint fmt",
		"test": "vitest --run --passWithNoTests",
		"verify": "bun format && bun lint && bun test && bun audit && run build"
	},
	"keywords": [
		"git",
		"cli",
		"interactive",
		"typescript"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@clack/prompts": "^0.11.0",
		"commander": "^14.0.2",
		"execa": "^9.6.1",
		"git": "workspace:*",
		"openai": "^6.15.0",
		"picocolors": "^1.1.1",
		"zod": "^4.2.1"
	},
	"devDependencies": {
		"@types/bun": "^1.3.5",
		"dprint": "^0.50.2",
		"oxlint": "^1.35.0",
		"oxlint-tsgolint": "^0.10.0",
		"tsdown": "^0.15.12",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16"
	},
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": "./dist/index.js",
		"./package.json": "./package.json"
	},
	"packageManager": "bun@1.3.5"
}
