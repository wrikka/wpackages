{
	"name": "@wrikka/prompt",
	"version": "0.0.1",
	"private": true,
	"description": "An elegant and feature-rich command-line prompt library, inspired by @clack/prompts but with 3x more components and a focus on superior UX/UI.",
	"main": "./dist/index.mjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.mts",
	"packageManager": "bun@1.3.5",
	"scripts": {
		"build": "tsdown --exports --dts",
		"dev": "bun --watch src/index.ts",
		"lint": "tsc --noEmit && oxlint .",
		"check": "tsc --noEmit",
		"review": "pnpm run lint && pnpm run check",
		"example": "bun run examples/basic.tsx",
		"example:autocomplete": "bun run examples/autocomplete.tsx",
		"showcase": "bun run examples/showcase.tsx",
		"test": "vitest --run",
		"format": "dprint fmt",
		"verify": "bun format && bun lint && bun test && bun audit && bun build"
	},
	"keywords": [
		"cli",
		"prompt",
		"cli-components",
		"terminal",
		"clack"
	],
	"author": "wrikka",
	"license": "MIT",
	"devDependencies": {
		"oxlint": "^1.35.0",
		"tsdown": "^0.18.3",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16"
	},
	"dependencies": {
		"@types/react": "^19.2.7",
		"effect": "^3.19.13",
		"ink": "^6.6.0",
		"ink-spinner": "^5.0.0",
		"picocolors": "^1.1.1",
		"react": "^19.2.3"
	},
	"exports": {
		".": "./dist/index.mjs",
		"./package.json": "./package.json"
	}
}
