{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "desktop",
	"version": "0.1.0",
	"identifier": "com.wterminal.desktop",
	"build": {
		"frontendDist": "../.output/public",
		"devUrl": "http://localhost:3000",
		"beforeDevCommand": "bunx nuxt dev --port 3000",
		"beforeBuildCommand": "bun run build"
	},
	"app": {
		"windows": [
			{
				"title": "desktop",
				"label": "main",
				"maximized": true,
				"width": 800,
				"height": 600,
				"resizable": true,
				"fullscreen": true
			}
		],
		"security": {
			"csp": null
		}
	},
	"plugins": {
		"global-shortcut": {
			"shortcuts": {
				"Ctrl+H": "toggle_window"
			}
		}
	},
	"bundle": {
		"active": true,
		"targets": "all"
	}
}
