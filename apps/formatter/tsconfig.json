{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"exactOptionalPropertyTypes": true,
		"useUnknownInCatchVariables": true,
		"skipLibCheck": false,
		"outDir": "./dist",
		"rootDir": "./src",
		"types": ["@types/bun", "vitest/globals"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
