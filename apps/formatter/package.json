{
	"name": "formatter",
	"version": "0.1.0",
	"private": true,
	"bin": {
		"wformat": "./dist/cli.js"
	},
	"type": "module",
	"scripts": {
		"watch": "bun lint && bun watch && bun test",
		"start": "bun --watch dev && vitest:ui",
		"dev": "bun run src/index.ts",
		"lint": "tsc --noEmit && biome lint --write",
		"build": "tsdown",
		"format": "biome format --write",
		"test": "vitest --run",
		"verify": "bun format && bun lint && bun test && bun audit && run build"
	},
	"dependencies": {
		"@clack/prompts": "^0.11.0",
		"dprint": "^0.50.2",
		"picocolors": "^1.1.1"
	},
	"devDependencies": {
		"@types/bun": "1.3.5",
		"@types/node": "^25.0.3",
		"tsdown": "^0.18.3",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16"
	},
	"main": "./dist/cli.js",
	"module": "./dist/cli.js",
	"types": "./dist/cli.d.ts",
	"exports": {
		".": "./dist/cli.js",
		"./package.json": "./package.json"
	},
	"packageManager": "bun@1.3.5"
}
