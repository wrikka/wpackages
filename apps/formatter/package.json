{
  "name": "formatter",
  "version": "0.1.0",
  "private": true,
  "bin": {
    "wformat": "./dist/cli.js"
  },
  "type": "module",
  "scripts": {
    "watch": "bun lint && bun watch && bun test",
    "start": "bun --watch dev && vitest:ui",
    "postinstall": "bunx taze -r -w -i",
    "dev": "bun run src/index.ts",
    "lint": "tsc --noEmit && biome lint --write",
    "build": "tsdown",
    "format": "biome format --write",
    "test": "vitest --run",
    "verify": "bun format && bun lint && bun test && bun audit && run build"
  },
  "dependencies": {
    "dprint": "^0.50.2",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^24.10.4",
    "tsdown": "^0.15.12",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "main": "./dist/cli.js",
  "module": "./dist/cli.js",
  "types": "./dist/cli.d.ts",
  "exports": {
    ".": "./dist/cli.js",
    "./package.json": "./package.json"
  },
  "packageManager": "bun@1.3.5"
}
