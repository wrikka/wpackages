{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"types": ["@types/bun", "vitest/globals"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
