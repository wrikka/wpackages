{
	"name": "git-cli",
	"version": "1.0.0",
	"description": "Interactive Git CLI tool with clack prompts",
	"main": "./dist/index.js",
	"bin": {
		"git-cli": "dist/app.js"
	},
	"type": "module",
	"scripts": {
		"lint": "tsc --noEmit && oxlint --fix",
		"build": "tsdown --exports --dts",
		"dev": "bun --watch src/app.ts",
		"start": "bun dist/app.js",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage"
	},
	"keywords": [
		"git",
		"cli",
		"interactive",
		"typescript"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@clack/prompts": "^0.11.0",
		"git": "workspace:*",
		"commander": "^14.0.2",
		"execa": "^9.6.1",
		"openai": "^6.15.0",
		"picocolors": "^1.1.1",
		"zod": "^4.2.1"
	},
	"devDependencies": {
		"@types/bun": "^1.3.5",
		"tsdown": "^0.15.12",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16"
	},
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": "./dist/index.js",
		"./package.json": "./package.json"
	}
}
