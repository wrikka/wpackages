{
	"$schema": "./dist/schemas.json",
	"commit": {
		"template": "feat: ",
		"conventionalCommits": true,
		"types": ["feat", "fix", "docs", "style", "refactor", "test", "chore", "perf"],
		"autoAddEmoji": false,
		"requireScope": false,
		"ai": {
			"enabled": true,
			"provider": "local",
			"model": "",
			"apiKey": ""
		}
	},
	"log": {
		"defaultLimit": 20,
		"dateFormat": "short",
		"showAuthor": true,
		"showDate": true,
		"shortHashLength": 7
	},
	"staging": {
		"confirmBeforeStage": true,
		"autoStagePatterns": [],
		"ignorePatterns": ["node_modules", "dist", "*.log", ".DS_Store"]
	},
	"status": {
		"showEmoji": true,
		"groupByType": true,
		"colorOutput": true
	},
	"general": {
		"defaultBranch": "main",
		"autoFetch": false,
		"verbose": false
	}
}
