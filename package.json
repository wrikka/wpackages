{
  "name": "@wpackages/wpackages",
  "version": "0.0.2",
  "workspaces": [
    "packages/**/*",
    "services/**/*",
    "apps/**/*",
    "utils/**/*",
    "lib/**/*",
    "plugins/**/*",
    "framework/**/*"
  ],
  "packageManager": "bun@1.3.5",
  "globalConcurrency": 32,
  "private": true,
  "scripts": {
    "start": "turbo watch verify",
    "prepare": "bunx lefthook install",
    "dev": "turbo dev --ui=tui",
    "format": "turbo format",
    "scan": "sg scan -r",
    "check:modules": "bunx node-modules-inspector",
    "lint": "turbo lint --concurrency=4",
    "test": "turbo test",
    "build": "turbo build",
    "verify": "turbo verify",
    "clean": "bunx rimraf */bun.lockb */node_modules"
  },
  "devDependencies": {
    "@ast-grep/cli": "^0.40.3",
    "@biomejs/biome": "^2.3.10",
    "@types/bun": "^1.3.5",
    "@types/node": "^25.0.3",
    "bun-types": "^1.3.5",
    "degit": "^2.8.4",
    "dprint": "^0.51.1",
    "glob": "^13.0.0",
    "lefthook": "^2.0.13",
    "oxlint": "^1.35.0",
    "taze": "^19.9.2",
    "tsdown": "^0.18.3",
    "turbo": "^2.7.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@wpackages/schema": "workspace:*",
    "effect": "^3.19.13"
  }
}
