{
	"name": "wpackages",
	"version": "0.0.2",
	"workspaces": [
		"packages/**/*",
		"services/**/*",
		"apps/**/*",
		"utils/**/*",
		"lib/**/*",
		"plugins/**/*",
		"framework/**/*",
		"cli/**/*",
		"components/**/*",
		"!**/node_modules/**"
	],
	"packageManager": "bun@1.3.5",
	"globalConcurrency": 32,
	"private": true,
	"engines": {
		"bun": ">=1.3.5"
	},
	"scripts": {
		"watch": "turbo watch verify --ui=tui",
		"postinstall": "bunx taze -r -w -i",
		"prepare": "bunx lefthook install",
		"dev": "turbo dev --ui=tui",
		"format": "turbo format",
		"scan": "sg scan -r",
		"check:modules": "bunx node-modules-inspector",
		"lint": "turbo lint --concurrency=4",
		"test": "turbo test",
		"test:coverage": "turbo test:coverage",
		"build": "turbo build",
		"verify": "turbo verify",
		"clean": "bunx rimraf */bun.lockb */node_modules"
	},
	"devDependencies": {
		"@ast-grep/cli": "^0.40.3",
		"@types/bun": "^1.3.5",
		"@types/glob": "^9.0.0",
		"@types/js-yaml": "^4.0.9",
		"@types/node": "^25.0.3",
		"@vitest/coverage-istanbul": "^4.0.16",
		"bun-types": "^1.3.5",
		"degit": "^2.8.4",
		"dprint": "^0.51.1",
		"glob": "^13.0.0",
		"js-yaml": "^4.1.1",
		"lefthook": "^2.0.13",
		"oxlint": "^1.36.0",
		"oxlint-tsgolint": "^0.10.1",
		"taze": "^19.9.2",
		"turbo": "^2.7.2",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16"
	},
	"dependencies": {
		"@effect/schema": "^0.75.5",
		"@wpackages/schema": "workspace:*",
		"effect": "^3.19.14"
	}
}
