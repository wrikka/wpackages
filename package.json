{
	"name": "wrikka-packages",
	"version": "0.0.1",
	"workspaces": [
		"packages/*",
		"apps/*",
		"framework/*"
	],
	"packageManager": "bun@1.3.5",
	"globalConcurrency": 32,
	"private": true,
	"scripts": {
		"start": "turbo watch verify",
		"postinstall": "taze -r -w -i",
		"prepare": "lefthook install",
		"dev": "turbo dev --ui=tui",
		"lint": "turbo lint",
		"test": "turbo test",
		"build": "turbo build",
		"verify": "turbo verify",
		"format": "turbo format",
		"node-modules-inspector": "node-modules-inspector",
		"scan": "sg scan -r"
	},
	"devDependencies": {
		"@ast-grep/cli": "^0.40.3",
		"@types/bun": "^1.3.5",
		"degit": "^2.8.4",
		"dprint": "^0.50.2",
		"glob": "^13.0.0",
		"lefthook": "^2.0.13",
		"oxlint": "^1.35.0",
		"taze": "19.9.0",
		"turbo": "^2.7.2",
		"typescript": "^5.9.3"
	}
}
