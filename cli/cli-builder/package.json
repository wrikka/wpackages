{
	"name": "@wpackages/cli-builder",
	"module": "./src/index.ts",
	"bin": "./bin/cli.ts",
	"type": "module",
	"private": true,
	"types": "./src/index.ts",
	"exports": {
		".": {
			"types": "./src/index.ts",
			"default": "./src/index.ts"
		},
		"./package.json": "./package.json"
	},
	"scripts": {
		"watch": "bun lint && bun watch && bun test",
		"start": "bun --watch dev && vitest:ui",
		"dev": "bun run src/app.ts",
		"lint": "oxlint --fix --type-aware",
		"build": "tsdown src/index.ts --entry-points bin/cli.ts",
		"format": "dprint fmt",
		"test": "vitest --run",
		"verify": "bun format && bun lint && bun test && bun audit && bun build"
	},
	"devDependencies": {
		"@effect/schema": "^0.67.22",
		"@types/bun": "latest",
		"oxlint": "latest",
		"oxlint-tsgolint": "latest",
		"tsdown": "^0.18.4",
		"vitest": "latest"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@effect/platform-bun": "^0.87.0",
		"@wpackages/cli-components": "workspace:*",
		"@wpackages/config-manager": "workspace:*",
		"@wpackages/prompt": "workspace:*",
		"@wpackages/schema": "workspace:*",
		"c12": "^3.3.3",
		"effect": "^3.19.14",
		"fastest-levenshtein": "^1.0.16",
		"find-up": "^8.0.0",
		"picocolors": "^1.1.1"
	},
	"packageManager": "bun@1.3.5"
}
