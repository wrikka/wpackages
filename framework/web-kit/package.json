{
	"name": "@wpackages/web-kit",
	"version": "0.0.1",
	"type": "module",
	"private": true,
	"engines": {
		"bun": ">=1.0.0"
	},
	"description": "Web Kit - Unified interface for API builder, HTTP, routing, server, plugins, and tracing",
	"main": "./dist/index.mjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.mts",
	"packageManager": "bun@1.3.8",
	"scripts": {
		"dev": "bun --watch src/index.ts",
		"format": "dprint fmt",
		"lint": "oxlint --fix --type-aware",
		"build": "bun build src/index.ts --outdir dist --target bun --format esm && bun build src/index.ts --outdir dist --target bun --format esm --sourcemap",
		"test": "bun test",
		"verify": "bun run format && bun run lint && bun run test && bun run build"
	},
	"keywords": [
		"web",
		"kit",
		"api",
		"http",
		"server",
		"routing",
		"plugins",
		"tracing",
		"effect-ts"
	],
	"author": "wrikka",
	"license": "MIT",
	"dependencies": {
		"@wpackages/api-builder": "workspace:*",
		"@wpackages/plugins-system": "workspace:*",
		"@wpackages/schema": "workspace:*",
		"@wpackages/validator": "workspace:*",
		"@wpackages/webserver": "workspace:*",
		"@wpackages/wrouter": "workspace:*"
	},
	"devDependencies": {
		"@types/bun": "^1.3.8",
		"oxlint": "^1.42.0",
		"typescript": "^5.9.3"
	},
	"exports": {
		".": "./dist/index.mjs",
		"./package.json": "./package.json"
	}
}
