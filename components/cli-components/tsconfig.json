{
	"include": ["src/**/*", "src"],
	"exclude": [
		"node_modules",
		"dist",
		"**/*.test.ts",
		"**/*.spec.ts",
		"**/*.usage.ts"
	],
	"compilerOptions": {
		"strict": true,
		"sourceMap": true,
		"moduleResolution": "bundler",
		"baseUrl": ".",
		"declaration": true,
		"module": "ES2022",
		"esModuleInterop": true,
		"target": "ES2022",
		"forceConsistentCasingInFileNames": true,
		"rootDir": "../..",
		"paths": {
			"@/*": ["./src/*"],
			"@w/design-pattern": ["../../utils/design-pattern/src"],
			"@wts/*": [
				"../../packages/*/src",
				"../../services/*/src",
				"../../apps/*/src"
			]
		},
		"outDir": "./dist",
		"skipLibCheck": true,
		"types": ["bun", "node", "vitest/globals"]
	}
}
