{
	"name": "@wts/github",
	"version": "0.1.0",
	"description": "GitHub service (Effect tag) for GitHub API access",
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": "./dist/index.js",
		"./package.json": "./package.json"
	},
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"build": "tsdown --exports --dts --minify",
		"dev": "bun --watch src/index.ts",
		"format": "dprint fmt",
		"lint": "tsc --noEmit && oxlint --fix",
		"test": "vitest run",
		"test:watch": "vitest",
		"verify": "bun run format && bun run lint && bun run test && bun audit && bun run build"
	},
	"dependencies": {
		"@wts/functional": "workspace:*"
	},
	"devDependencies": {
		"@types/bun": "^1.3.5",
		"@types/node": "^20.19.27",
		"tsdown": "^0.18.3",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16"
	},
	"packageManager": "bun@1.3.5"
}
