{
	"name": "@wpackages/state",
	"version": "0.0.1",
	"private": true,
	"description": "A blazing fast library for building interactive command-line apps, inspired by React and Ink.",
	"keywords": [
		"cli",
		"ui",
		"bun",
		"react",
		"ink"
	],
	"author": "",
	"license": "MIT",
	"main": "./dist/index.mjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.mts",
	"exports": {
		".": "./dist/index.mjs",
		"./package.json": "./package.json"
	},
	"scripts": {
		"build": "tsdown",
		"dev": "bun run src/app.ts",
		"lint": "tsc --noEmit && biome lint --write",
