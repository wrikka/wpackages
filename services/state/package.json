		"ink": "^6.6.0",
		"picocolors": "^1.1.1",
		"react": "^18.3.1",
		"react-reconciler": "^0.33.0",
		"yoga-layout-prebuilt": "^1.10.0"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@types/node": "^25.0.3",
		"@types/react": "^18.3.27",
		"@types/react-reconciler": "^0.32.3",
		"@vitejs/plugin-react": "^4.7.0",
		"@wpackages/ui": "workspace:*",
		"hyperfine": "^1.0.0",
