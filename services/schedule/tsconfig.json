{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"noUnusedLocals": true,
		"noImplicitOverride": true,
		"exactOptionalPropertyTypes": true,
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"src/*"
			]
		}
	},
	"include": [
		"src/**/*",
		"src"
	],
	"exclude": [
		"node_modules",
		"dist",
		"build",
		".turbo",
		"coverage"
	]
}
