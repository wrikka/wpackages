{
	"name": "@wpackages/cache",
	"version": "0.1.0",
	"private": true,
	"description": "Functional caching library with memoization, TTL, and LRU eviction",
	"type": "module",
	"main": "./dist/index.mjs",
	"types": "./dist/index.d.mts",
	"exports": {
		".": "./dist/index.mjs",
		"./package.json": "./package.json"
	},
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"build": "tsdown --exports --dts --minify",
		"dev": "tsdown --watch",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"format": "dprint fmt",
		"lint": "oxlint --fix --type-aware",
		"review": "bun run format && bun run lint && bun run test && bun run build",
		"verify": "bun run format && bun run lint && bun run test:coverage && bun run build"
	},
	"dependencies": {
		"@wpackages/design-pattern": "workspace:*",
		"@wpackages/functional": "workspace:*"
	},
	"devDependencies": {
		"@types/bun": "^1.3.5",
		"@vitest/coverage-istanbul": "^4.0.16",
		"tsdown": "^0.18.4",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16"
	},
	"keywords": [
		"cache",
		"memoization",
		"lru",
		"ttl",
		"functional",
		"typescript"
	],
	"module": "./dist/index.mjs",
	"packageManager": "bun@1.3.5",
	"engines": {
		"bun": ">=1.3.5"
	}
}
