{
	"name": "@wpackages/presets",
	"version": "0.0.1",
	"private": true,
	"description": "Presets and configurations for wpackages workspace with theme, config, and app composition",
	"type": "module",
	"main": "./src/index.ts",
	"types": "./src/index.ts",
	"exports": {
		".": "./src/index.ts",
		"./package.json": "./package.json"
	},
	"scripts": {
		"dev": "bun run src/index.ts",
		"build": "bun build src/index.ts --outdir dist --target bun",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"lint": "oxlint --fix --type-aware",
		"format": "dprint fmt",
		"verify": "bun run format && bun run lint && bun run test:coverage && bun run build"
	},
	"dependencies": {
		"@effect/schema": "^0.75.5",
		"@wpackages/error": "workspace:*",
		"@wpackages/observability": "workspace:*",
		"effect": "^3.19.15"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@vitest/coverage-istanbul": "^4.0.18",
		"dprint": "^0.49.1",
		"oxlint": "^1.42.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	},
	"engines": {
		"bun": ">=1.0.0"
	}
}
