{
	"name": "@wpackages/schedule",
	"version": "0.1.0",
	"private": true,
	"description": "Functional scheduling utilities for cron expressions and task scheduling",
	"keywords": [
		"schedule",
		"cron",
		"functional-programming",
		"typescript"
	],
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"files": [
		"dist"
	],
	"engines": {
		"bun": ">=1.0.0"
	},
	"scripts": {
		"format": "biome format --write src",
		"lint": "tsc --noEmit && oxlint --fix --type-aware",
		"build": "bun build src/index.ts --outdir dist --target bun",
		"test": "bun test",
		"watch": "bun --watch src/index.ts",
		"dev": "bun run src/index.ts"
	},
	"dependencies": {
		"effect": "^3.19.15"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@effect/schema": "^0.67.23",
		"@effect/vitest": "^0.6.12",
		"@types/bun": "latest",
		"typescript": "^5.9.3"
	}
}
