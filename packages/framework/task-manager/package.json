{
	"name": "@wpackages/task-manager",
	"version": "1.0.0",
	"description": "A command-line task manager for organizing and tracking tasks",
	"type": "module",
	"packageManager": "bun@1.3.8",
	"main": "./dist/index.js",
	"bin": {
		"wtask": "dist/index.js"
	},
	"scripts": {
		"build": "tsdown --exports --dts --minify",
		"dev": "bun run --watch src/index.ts",
		"lint": "tsc --noEmit && oxlint --fix --type-aware",
		"format": "dprint fmt",
		"release": "release-it",
		"watch": "bun --watch src/index.ts",
		"test": "vitest run"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@types/node": "^24.10.9",
		"dprint": "^0.51.1",
		"effect": "^3.19.15",
		"release-it": "^19.2.4",
		"tsdown": "^0.15.12",
		"typescript": "^5.9.3"
	},
	"module": "./dist/index.js",
	"exports": {
		".": "./dist/index.js",
		"./package.json": "./package.json"
	},
	"dependencies": {
		"@clack/prompts": "^0.11.0",
		"@types/ini": "^4.1.1",
		"@wpackages/cli-components": "workspace:*",
		"ini": "^6.0.0",
		"picocolors": "^1.1.1",
		"toml": "^3.0.0"
	},
	"types": "./dist/index.d.ts"
}
