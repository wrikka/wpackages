{
	"name": "@wpackages/vitext-kit",
	"version": "0.0.1",
	"type": "module",
	"main": "./dist/index.mjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.mts",
	"exports": {
		".": "./dist/index.mjs",
		"./package.json": "./package.json"
	},
	"files": [
		"dist",
		"src"
	],
	"scripts": {
		"build": "tsdown --exports --dts --minify",
		"dev": "bun --watch src/index.ts",
		"format": "dprint fmt",
		"lint": "oxlint --fix --type-aware",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"verify": "bun run format && bun run lint && bun run test:coverage && bun run build"
	},
	"dependencies": {
		"@wpackages/tui": "workspace:*"
	},
	"devDependencies": {
		"@types/bun": "1.3.5",
		"@types/node": "^25.0.5",
		"@vitest/coverage-v8": "4.0.16",
		"tsdown": "0.18.4",
		"typescript": "^5.9.3",
		"vitest": "4.0.16"
	}
}
