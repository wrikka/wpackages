{
	"name": "@wpackages/tsconfig",
	"version": "0.0.1",
	"type": "module",
	"private": true,
	"description": "TypeScript configuration presets for different environments (node, bun, cli, web, turbo)",
	"exports": {
		"./base": "./tsconfig.base.json",
		"./node": "./tsconfig.node.json",
		"./bun": "./tsconfig.bun.json",
		"./cli": "./tsconfig.cli.json",
		"./web": "./tsconfig.web.json",
		"./turbo": "./tsconfig.turbo.json"
	},
	"files": [
		"*.json"
	],
	"keywords": [
		"typescript",
		"tsconfig",
		"config",
		"preset",
		"monorepo",
		"turborepo"
	],
	"license": "MIT",
	"scripts": {
		"watch": "bun --watch src/index.ts",
		"dev": "bun run src/index.ts",
		"format": "dprint fmt",
		"lint": "tsc --noEmit && oxlint --fix --type-aware",
		"test": "vitest run",
		"build": "tsdown --exports --dts --minify"
	}
}
