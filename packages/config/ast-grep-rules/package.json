{
	"name": "@wpackages/wvite-ast-grep-plugin",
	"version": "0.1.0",
	"description": "Vite plugin for ast-grep rules integration",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"rules"
	],
	"scripts": {
		"build": "tsdown",
		"dev": "tsdown --watch",
		"test": "vitest",
		"lint": "tsc --noEmit && oxlint --fix --type-aware",
		"typecheck": "tsc --noEmit",
		"watch": "bun --watch src/index.ts",
		"format": "dprint fmt"
	},
	"dependencies": {
		"@ast-grep/cli": "^0.40.5"
	},
	"devDependencies": {
		"@types/node": "^20.19.33",
		"oxlint": "^0.1.2",
		"tsdown": "^0.2.17",
		"typescript": "^5.9.3",
		"vitest": "^1.6.1"
	},
	"publishConfig": {
		"access": "public"
	}
}
