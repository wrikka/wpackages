{
  "name": "@wrikka/ts-build",
  "version": "0.0.1",
  "private": true,
  "description": "A modern, fast, and feature-rich TypeScript build tool.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "ts-build": "./bin/ts-build.ts"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "bun ./bin/ts-build.ts build",
    "dev": "bun ./bin/ts-build.ts build --watch",
    "lint": "oxlint .",
    "check": "tsc --noEmit",
    "test:example": "bun ./bin/ts-build.ts build --entry examples/simple-project/src/index.ts --outDir examples/simple-project/dist",
    "bench": "bun benchmark/runner.ts"
  },
  "keywords": [
    "typescript",
    "build",
    "compiler",
    "bundler",
    "rolldown",
    "esbuild"
  ],
  "author": "Wrikka",
  "license": "MIT",
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "chokidar": "^3.6.0",
    "commander": "^12.1.0",
    "esbuild": "^0.20.2",
    "glob": "^10.5.0",
    "picocolors": "^1.1.1",
    "rolldown": "^1.0.0-beta.57"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "@types/node": "^20.19.27",
    "oxlint": "^0.3.5",
    "typescript": "^5.9.3"
  }
}
