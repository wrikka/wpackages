{
	"name": "caching",
	"version": "0.1.0",
	"private": true,
	"description": "Functional caching library with memoization, TTL, and LRU eviction",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": "./dist/index.js",
		"./package.json": "./package.json"
	},
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"build": "tsdown --exports --dts --minify",
		"dev": "tsdown --watch",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"format": "dprint fmt",
		"lint": "tsc --noEmit && oxlint --fix",
		"review": "bun run format && bun run lint && bun run test && bun run build"
	},
	"dependencies": {},
	"devDependencies": {
		"@types/bun": "^1.3.5",
		"tsdown": "^0.15.12",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16"
	},
	"keywords": [
		"cache",
		"memoization",
		"lru",
		"ttl",
		"functional",
		"typescript"
	],
	"module": "./dist/index.js"
}
