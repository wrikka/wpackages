{
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"noEmit": true,
		"skipLibCheck": true,
		"types": ["@types/bun", "vitest/globals"],
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "bundler",
		"target": "ES2020",
		"module": "ES2020",
		"noImplicitAny": false
	},
	"exclude": ["node_modules", "dist", "test", "examples"],
	"include": ["src/**/*"]
}
