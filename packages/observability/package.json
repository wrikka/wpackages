{
	"name": "observability",
	"version": "0.1.0",
	"private": true,
	"description": "Observability utilities (logging, metrics, tracing helpers) for Wrikka packages",
	"type": "module",
	"main": "./dist/index.mjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.mts",
	"exports": {
		".": "./dist/index.mjs",
		"./package.json": "./package.json"
	},
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"build": "tsdown --dts --minify",
		"dev": "tsdown --watch",
		"test": "vitest run",
		"lint": "tsc --noEmit && oxlint --fix",
		"verify": "bun run lint && bun run test && bun run build",
		"review": "bun run verify"
	},
	"dependencies": {
		"@w/design-pattern": "workspace:*"
	},
	"devDependencies": {
		"@types/bun": "^1.3.5",
		"@types/node": "^25.0.3",
		"oxlint": "^1.35.0",
		"tsdown": "^0.18.3",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16"
	}
}
