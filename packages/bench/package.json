{
	"name": "@wpackages/bench",
	"version": "0.0.1",
	"private": true,
	"bin": {
		"wbench": "./dist/bin/cli.js"
	},
	"packageManager": "bun@1.3.5",
	"type": "module",
	"description": "Benchmarking utility for WTS packages with functional programming patterns",
	"keywords": [
		"benchmark",
		"performance",
		"testing",
		"typescript",
		"functional"
	],
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": "./dist/index.js",
		"./package.json": "./package.json"
	},
	"files": ["dist", "README.md"],
	"scripts": {
		"watch": "bun lint && bun --watch src/bin/cli.ts && bun test",
		"start": "bun --watch src/bin/cli.ts && bun run test:ui",
		"postinstall": "bunx taze -r -w -i",
		"dev": "bun run src/bin/cli.ts",
		"lint": "tsc --noEmit",
		"build": "tsdown",
		"postbuild": "bun run src/scripts/add-shebang.ts",
		"format": "dprint fmt",
		"test": "vitest --run",
		"test:coverage": "vitest run --coverage",
		"test:ui": "vitest --ui",
		"verify": "bun format && bun lint && bun test && bun audit && bun build"
	},
	"dependencies": {
		"@wpackages/schema": "workspace:*",
		"@wpackages/cli-components": "workspace:*",
		"effect": "^3.19.13",
		"picocolors": "^1.1.1"
	},
	"devDependencies": {
		"@types/bun": "^1.3.5",
		"@types/node": "^25.0.3",
		"execa": "^9.6.1",
		"fast-check": "^4.5.2",
		"tsdown": "^0.18.3",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16"
	},
	"module": "./dist/index.js"
}
