{
  "name": "@wpackages/styling",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/styling.umd.cjs",
  "module": "./dist/styling.js",
  "exports": {
    ".": {
      "import": "./dist/styling.js",
      "require": "./dist/styling.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "oxlint .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "verify": "bun run lint && bun run typecheck && bun run test",
    "watch": "bun --watch src/index.ts",
    "format": "dprint fmt"
  },
  "devDependencies": {
    "@iconify-json/mdi": "^1.2.3",
    "@types/bun": "latest",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@iconify/tailwind": "^1.2.0",
    "@tailwindcss/node": "^4.1.18",
    "@tailwindcss/postcss": "^4.1.18",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18"
  }
}
