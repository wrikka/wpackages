{
	"name": "schema",
	"version": "0.0.1",
	"private": true,
	"packageManager": "bun@1.3.5",
	"type": "module",
	"description": "Type-safe schema validation with full type inference and functional API",
	"keywords": [
		"schema",
		"validation",
		"type-safe",
		"functional",
		"typescript"
	],
	"author": "wrikka",
	"license": "MIT",
	"homepage": "https://github.com/wrikka/wpackages/tree/main/packages/schema#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/wrikka/wpackages.git",
		"directory": "packages/schema"
	},
	"bugs": {
		"url": "https://github.com/wrikka/wpackages/issues"
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": "./dist/index.js",
		"./package.json": "./package.json"
	},
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"dev": "bun run src/index.ts",
		"watch": "tsdown --watch",
		"start": "bun --watch dev",
		"format": "biome format --write",
		"lint": "tsc --noEmit && biome lint --write",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"build": "tsdown --exports --dts --minify",
		"verify": "bun run format && bun run lint && bun run test && bun run build"
	},
	"dependencies": {
		"@w/design-pattern": "workspace:*",
		"parser": "workspace:*"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"@types/bun": "^1.3.5",
		"tsconfig-paths": "^4.2.0",
		"tsdown": "^0.18.3",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16"
	},
	"module": "./dist/index.js"
}
