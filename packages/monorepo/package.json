{
	"name": "@wpackages/monorepo",
	"packageManager": "bun@1.3.5",
	"type": "module",
	"scripts": {
		"watch": "bun lint && bun watch && bun test",
		"start": "bun --watch dev && vitest:ui",
		"dev": "bun run src/index.ts",
		"lint": "oxlint --fix --type-aware",
		"build": "tsdown",
		"test": "vitest --run",
		"verify": "bun format && bun lint && bun test && bun audit && run build"
	},
	"keywords": [
		"monorepo",
		"build-tool",
		"task-runner",
		"effect-ts"
	],
	"author": "wrikka",
	"license": "MIT",
	"dependencies": {
		"@wpackages/schema": "workspace:*",
		"effect": "^3.19.14"
	},
	"devDependencies": {
		"@types/node": "^25.0.3",
		"picocolors": "^1.1.1",
		"tsdown": "^0.18.4",
		"typescript": "^5.9.3",
		"vite-tsconfig-paths": "^6.0.3",
		"vitest": "^4.0.16"
	},
	"publishConfig": {
		"access": "public"
	}
}
