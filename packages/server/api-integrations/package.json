{
  "name": "@wpackages/api-integrations",
  "version": "0.0.1",
  "private": true,
  "description": "Utilities for building API integrations, including error handling, retry logic, caching, and more.",
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsdown --exports --dts --minify",
    "dev": "tsdown --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "format": "dprint fmt",
    "lint": "tsc --noEmit && oxlint --fix",
    "verify": "bun run format && bun run lint && bun run build && bun run test",
    "watch": "bun --watch src/index.ts"
  },
  "dependencies": {},
  "devDependencies": {
    "tsdown": "^0.18.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "publishConfig": {
    "access": "public"
  },
  "module": "./dist/index.mjs",
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json"
  }
}
