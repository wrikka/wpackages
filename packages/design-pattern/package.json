{
	"name": "design-pattern",
	"version": "0.1.0",
	"description": "Pure functional design patterns library with Effect-TS - includes all GoF patterns in functional style",
	"keywords": [
		"design-pattern",
		"functional",
		"effect-ts",
		"creational",
		"structural",
		"behavioral",
		"factory",
		"builder",
		"singleton",
		"observer",
		"strategy",
		"decorator",
		"adapter",
		"facade",
		"proxy",
		"command",
		"chain-of-responsibility",
		"iterator",
		"mediator",
		"memento",
		"prototype",
		"state",
		"template",
		"visitor",
		"composite",
		"bridge",
		"flyweight"
	],
	"type": "module",
	"main": "./dist/index.mjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.mts",
	"exports": {
		".": "./dist/index.mjs",
		"./creational": "./dist/creational/index.mjs",
		"./structural": "./dist/structural/index.mjs",
		"./behavioral": "./dist/behavioral/index.mjs",
		"./utils": "./dist/utils/index.mjs",
		"./package.json": "./package.json"
	},
	"scripts": {
		"build": "tsdown --dts --minify",
		"dev": "tsc --noEmit --watch",
		"lint": "tsc --noEmit && oxlint --fix",
		"review": "bun run lint && bun run test && bun run build",
		"test": "vitest run"
	},
	"dependencies": {
		"effect": "^3.19.13"
	},
	"devDependencies": {
		"@types/bun": "^1.3.5",
		"tsdown": "^0.16.8",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16"
	}
}
