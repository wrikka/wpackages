{
  "name": "@wpackages/validator",
  "version": "0.1.0",
  "type": "module",
  "engines": {
    "bun": ">=1.0.0"
  },
  "scripts": {
    "watch": "bun --watch verify",
    "prepare": "lefthook install",
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "lint": "oxlint --fix --type-aware",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "verify": "bun run lint && bun run typecheck && bun run test && bun run build",
    "bench": "bun run bench/run.ts"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./types": "./src/types/index.ts",
    "./validators": "./src/utils/validators/index.ts",
    "./utils": "./src/utils/index.ts"
  },
  "files": [
    "src",
    "dist"
  ],
  "devDependencies": {
    "@types/node": "^22.19.7",
    "oxlint": "^1.42.0",
    "oxlint-tsgolint": "^0.11.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@effect/schema": "^0.75.0",
    "arktype": "^2.1.29",
    "effect": "^3.19.15",
    "joi": "^17.13.3",
    "yup": "^1.7.1",
    "zod": "^3.25.76"
  }
}
