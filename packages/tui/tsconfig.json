{
	"extends": "./../../tsconfig.json",
	"compilerOptions": {
		"moduleDetection": "force",

		"downlevelIteration": true,
		"jsxImportSource": "react",
		"allowSyntheticDefaultImports": true,
		"allowJs": false,
		"isolatedDeclarations": true,
		"declarationMap": true,
		"declaration": true,
		"noEmit": false,
		"types": ["@types/bun", "@types/node"]
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"]
}
