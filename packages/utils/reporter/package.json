{
	"name": "@wpackages/reporter",
	"version": "0.1.0",
	"description": "Universal report formatting utilities for code analysis tools",
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": "./dist/index.js",
		"./package.json": "./package.json"
	},
	"keywords": [
		"reporter",
		"formatter",
		"sarif",
		"json",
		"code-analysis",
		"output"
	],
	"author": "newkub",
	"license": "MIT",
	"scripts": {
		"dev": "bun run src/index.ts",
		"build": "bun build src/index.ts --outdir dist --target bun",
		"test": "bun test",
		"lint": "tsc --noEmit && oxlint --fix --type-aware",
		"format": "dprint fmt",
		"verify": "bun format && bun lint && bun test && bun build",
		"watch": "bun --watch src/index.ts"
	},
	"dependencies": {
		"picocolors": "^1.1.1"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@types/node": "^25.2.3",
		"dprint": "^0.50.2",
		"oxlint": "^1.48.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18"
	},
	"packageManager": "bun@1.3.9"
}
