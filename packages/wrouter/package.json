{
	"name": "@wpackages/wrouter",
	"version": "0.0.1",
	"type": "module",
	"engines": {
		"bun": ">=1.0.0"
	},
	"main": "./dist/index.mjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.mts",
	"exports": {
		".": "./dist/index.mjs",
		"./package.json": "./package.json"
	},
	"files": [
		"dist",
		"src"
	],
	"scripts": {
		"watch": "bun --watch verify",
		"dev": "bun run src/index.ts",
		"format": "dprint fmt",
		"lint": "tsc --noEmit",
		"build": "bun build src/index.ts --outdir dist --target bun --minify",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"verify": "bun run format && bun audit && bun run lint && bun run test && bun run build && bun run dev"
	},
	"dependencies": {
		"@wpackages/parser": "workspace:*",
		"@wpackages/error": "workspace:*",
		"@wpackages/schema": "workspace:*",
		"@wpackages/cache": "workspace:*",
		"@wpackages/logger": "workspace:*",
		"@wpackages/observability": "workspace:*",
		"effect": "^3.12.5",
		"@effect/schema": "^0.75.5"
	},
	"devDependencies": {
		"@types/bun": "1.3.5",
		"@types/node": "^25.0.5",
		"@vitest/coverage-v8": "4.0.16",
		"tsdown": "0.18.4",
		"typescript": "^5.9.3",
		"vitest": "4.0.16"
	}
}
