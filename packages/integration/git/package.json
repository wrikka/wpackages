{
	"name": "@wpackages/git",
	"version": "0.1.0",
	"description": "A TypeScript library for interacting with Git repositories.",
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": "./dist/index.js",
		"./package.json": "./package.json"
	},
	"scripts": {
		"build": "tsdown --exports --dts --minify",
		"dev": "bun --watch src/index.ts",
		"lint": "tsc --noEmit && oxlint --fix --type-aware",
		"verify": "turbo format && bun lint && bun test",
		"test": "vitest",
		"watch": "bun --watch src/index.ts",
		"format": "dprint fmt"
	},
	"dependencies": {
		"effect": "^3.19.18"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@types/node": "^24.10.13",
		"knip": "^5.84.1",
		"oxlint": "1.28.0",
		"tsdown": "^0.15.12",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18"
	}
}
