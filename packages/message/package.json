{
  "name": "@wpackages/message",
  "version": "0.0.1",
  "private": true,
  "description": "A comprehensive messaging service for the WTS framework, built with Effect-TS. It handles various communication channels like email, SMS, and other real-time messages.",
  "keywords": [
    "wts",
    "message",
    "service",
    "effect",
    "effect-ts",
    "email",
    "sms",
    "push",
    "in-app",
    "messaging"
  ],
  "license": "MIT",
  "author": "Wrikka",
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown --dts --minify",
    "dev": "tsc --noEmit --watch",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "lint": "tsc --noEmit && oxlint --fix",
    "review": "bun run lint && bun run test && bun run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "effect": "^3.19.13"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "@types/node": "^24.10.4",
    "tsdown": "^0.16.8",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "publishConfig": {
    "access": "public"
  },
  "module": "./dist/index.mjs",
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json"
  }
}
