{
	"name": "@wpackages/webserver",
	"version": "0.1.0",
	"private": true,
	"description": "High-performance web server using Bun.serve with Effect integration",
	"keywords": ["web", "server", "bun", "http", "api", "rest", "effect"],
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./lib": {
			"types": "./src/lib/index.ts",
			"import": "./src/lib/index.ts"
		},
		"./services": {
			"types": "./src/services/index.ts",
			"import": "./src/services/index.ts"
		}
	},
	"files": ["dist", "src"],
	"scripts": {
		"watch": "bun --watch verify",
		"prepare": "lefthook install",
		"dev": "bun run build:all && bun --watch src/index.ts",
		"build": "bun run build:all && bun build src/index.ts --outdir ./dist --target bun",
		"build:routes": "bun run tools/build-routes.ts",
		"build:imports": "bun run tools/build-imports.ts",
		"build:all": "bun run build:routes && bun run build:imports",
		"lint": "tsc --noEmit && oxlint --fix --type-aware",
		"test": "vitest --passWithNoTests",
		"typecheck": "tsc --noEmit",
		"verify": "bun run lint && bun run test && bun run build",
		"bench": "bun run bench/run.ts"
	},
	"dependencies": {
		"@effect/schema": "^",
		"@wpackages/http-server": "workspace:*",
		"@wpackages/schema": "workspace:*",
		"effect": "^3.19.15"
	},
	"devDependencies": {
		"@types/bun": "1.3.6",
		"@types/node": "^25.1.0",
		"autocannon": "^8.0.0",
		"glob": "^13.0.0",
		"oxlint": "^1.42.0",
		"oxlint-tsgolint": "^0.11.3",
		"typescript": "^5.9.3",
		"unimport": "^5.6.0",
		"vite": "^7.3.1",
		"vitest": "^4.0.18"
	},
	"publishConfig": {
		"access": "restricted"
	}
}
