{
	"name": "@wpackages/webserver",
	"private": true,
	"version": "0.1.0",
	"description": "A web server utility package",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": "./dist/index.js"
	},
	"scripts": {
		"postinstall": "bunx taze -r -w -i",
		"watch": "bun --watch run verify",
		"dev": "bun run src/index.ts",
		"lint": "oxlint --fix --type-aware",
		"build": "tsdown src/index.ts --out-dir dist",
		"test": "vitest run",
		"verify": "bun run format && bun run lint && bun run test && bun run build",
		"drizzle": "drizzle-kit",
		"drizzle:generate": "drizzle-kit generate",
		"drizzle:migrate": "drizzle-kit migrate",
		"drizzle:studio": "drizzle-kit studio --host 0.0.0.0"
	},
	"dependencies": {
		"dotenv": "^17.2.3",
		"drizzle-kit": "^0.31.8",
		"drizzle-orm": "^0.45.1",
		"effect": "^3.19.14",
		"pg": "^8.16.3",
		"zod": "^4.3.4"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"tsdown": "^0.18.4",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16"
	}
}
