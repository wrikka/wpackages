{
	"name": "@wpackages/webserver",
	"private": true,
	"version": "0.1.0",
	"description": "A web server utility package",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": "./dist/index.js"
	},
	"scripts": {
		"postinstall": "bunx taze -r -w -i",
		"watch": "bun --watch run verify",
		"format": "dprint fmt",
		"dev": "bun run src/index.ts",
		"bench": "bun run bench/run.ts",
		"lint": "oxlint --fix --type-aware",
		"build": "tsdown src/index.ts --out-dir dist",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"verify": "bun run format && bun run lint && bun run test:coverage && bun run build",
		"drizzle": "drizzle-kit",
		"drizzle:generate": "drizzle-kit generate",
		"drizzle:migrate": "drizzle-kit migrate",
		"drizzle:studio": "drizzle-kit studio --host 0.0.0.0"
	},
	"dependencies": {
		"@effect/platform": "^0.94.1",
		"@effect/platform-bun": "^0.87.0",
		"@wpackages/database": "workspace:*",
		"@wpackages/http": "workspace:*",
		"@wpackages/http-routing": "workspace:*",
		"@wpackages/logger": "workspace:*",
		"@wpackages/security": "workspace:*",
		"@wpackages/tracing": "workspace:*",
		"@wpackages/utils": "workspace:*",
		"dotenv": "^17.2.3",
		"drizzle-kit": "^0.31.8",
		"drizzle-orm": "^0.45.1",
		"effect": "^3.19.14",
		"pg": "^8.16.3",
		"zod": "^4.3.5"
	},
	"devDependencies": {
		"@effect/platform-node": "^0.104.0",
		"@sinclair/typebox": "^0.34.46",
		"@types/bun": "latest",
		"@types/pg": "^8.16.0",
		"@vitest/coverage-istanbul": "^4.0.16",
		"@vitest/coverage-v8": "^4.0.16",
		"@wpackages/bench": "workspace:*",
		"elysia": "^1.4.21",
		"tsdown": "^0.18.4",
		"typescript": "^5.9.3",
		"vite-tsconfig-paths": "^4.3.2",
		"vitest": "^4.0.16"
	}
}
