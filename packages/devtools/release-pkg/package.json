{
  "bin": {
    "wrelease": "./dist/bin/cli.js",
    "wts-release": "./dist/bin/cli.js",
    "wrelease-preview": "./dist/bin/preview.js"
  },
  "dependencies": {
    "execa": "^9.6.1",
    "find-up": "^8.0.0",
    "glob": "^11.1.0",
    "picocolors": "^1.1.1"
  },
  "description": "Modern release automation tool - Better than release-it with Effect-TS",
  "devDependencies": {
    "@types/bun": "^1.3.8",
    "@types/node": "^24.10.9",
    "@vitest/coverage-v8": "^4.0.18",
    "tsdown": "^0.15.12",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "keywords": [
    "cli",
    "release",
    "version",
    "changelog",
    "git",
    "npm",
    "publish",
    "effect-ts",
    "functional",
    "automation"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "name": "@wpackages/release-pkg",
  "scripts": {
    "build": "tsdown --exports --dts --minify",
    "dev": "bun --watch src/bin/cli.ts",
    "lint": "oxlint --fix --type-aware",
    "verify": "bun lint && bun test",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "bun run build",
    "watch": "bun --watch src/index.ts",
    "format": "dprint fmt"
  },
  "type": "module",
  "types": "./dist/index.d.ts",
  "version": "0.1.0-preview.1767473161690.9dfd1c4"
}
