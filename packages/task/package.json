{
	"name": "task",
	"version": "0.1.0",
	"private": true,
	"description": "Task orchestration and scheduling - Workflows, queues, and parallel execution",
	"keywords": [
		"task",
		"scheduling",
		"queue",
		"workflow",
		"cron",
		"parallel",
		"orchestration",
		"functional"
	],
	"main": "./dist/index.mjs",
	"types": "./dist/index.d.mts",
	"exports": {
		".": "./dist/index.mjs",
		"./package.json": "./package.json"
	},
	"files": [
		"src"
	],
	"scripts": {
		"dev": "tsdown --watch",
		"build": "tsdown --exports --dts --minify",
		"test": "vitest run",
		"test:watch": "vitest",
		"typecheck": "tsc --noEmit",
		"lint": "tsc --noEmit && oxlint --fix",
		"review": "knip && tsc --noEmit"
	},
	"dependencies": {
		"@wts/functional": "workspace:*",
		"@wts/resilience": "workspace:*",
		"@wts/utils": "workspace:*"
	},
	"devDependencies": {
		"@types/node": "24.10.1",
		"knip": "^5.78.0",
		"oxlint": "1.28.0",
		"tsdown": "^0.16.8",
		"typescript": "^5.9.3",
		"vitest": "4.0.8"
	},
	"knip": {
		"entry": [
			"src/index.ts",
			"**/*.test.ts"
		],
		"ignore": [
			"**/*.usage.ts",
			"src/utils/worker.ts"
		],
		"ignoreDependencies": [
			"program"
		]
	},
	"module": "./dist/index.mjs"
}
