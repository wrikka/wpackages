{
  "name": "@wpackages/devserver",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "description": "Advanced development server with hot module replacement, built to be better than Vite's dev server",
  "keywords": [
    "dev-server",
    "hot-reload",
    "development",
    "server",
    "typescript"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown --dts --minify",
    "dev": "tsc --noEmit --watch",
    "test": "echo \"Tests not implemented yet\" && exit 0",
    "lint": "oxlint --fix --type-aware",
    "review": "bun run lint && bun run test && bun run build"
  },
  "dependencies": {
    "@shikijs/markdown-it": "^3.20.0",
    "@wpackages/webserver": "workspace:*",
    "glob": "^13.0.0",
    "h3": "^1.15.4",
    "jose": "^6.1.3",
    "markdown-it": "^14.1.0",
    "node-cron": "^4.2.1",
    "picocolors": "^1.1.1",
    "shiki": "^3.20.0",
    "unocss": "^66.5.12",
    "unplugin-icons": "^22.5.0",
    "unstorage": "^1.17.3",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "@types/chokidar": "^1.7.5",
    "@types/node": "^25.0.3",
    "chokidar": "^5.0.0",
    "oxlint": "1.36.0",
    "oxlint-tsgolint": "0.10.1",
    "tsdown": "^0.18.4",
    "typescript": "^5.9.3"
  }
}
