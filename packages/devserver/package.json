{
	"name": "@wpackages/devserver",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"description": "Advanced development server with hot module replacement, built to be better than Vite's dev server",
	"keywords": [
		"dev-server",
		"hot-reload",
		"development",
		"server",
		"typescript"
	],
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./package.json": "./package.json"
	},
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"build": "tsdown --dts --minify",
		"dev": "tsc --noEmit --watch",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"lint": "oxlint --fix --type-aware",
		"review": "bun run lint && bun run test && bun run build"
	},
	"dependencies": {
		"@shikijs/markdown-it": "^3.20.0",
		"@wpackages/watch": "workspace:*",
		"@wpackages/webserver": "workspace:*",
		"glob": "^13.0.0",
		"h3": "^2.0.1-rc.7",
		"jose": "^6.1.3",
		"markdown-it": "^14.1.0",
		"node-cron": "^4.2.1",
		"picocolors": "^1.1.1",
		"shiki": "^3.20.0",
		"unocss": "^66.5.12",
		"unplugin-icons": "^0.22.0",
		"unstorage": "^1.17.3",
		"vite": "^7.3.0",
		"ws": "^8.18.3"
	},
	"devDependencies": {
		"@types/bun": "^1.3.5",
		"@types/node": "^24.10.4",
		"oxlint": "latest",
		"oxlint-tsgolint": "latest",
		"tsdown": "^0.15.12",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16"
	}
}
