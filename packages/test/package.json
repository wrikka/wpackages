{
	"name": "@wpackages/test",
	"version": "0.1.0",
	"bin": {
		"wtest": "./dist/cli.mjs"
	},
	"description": "Type-safe, functional testing framework with unified unit and E2E testing",
	"type": "module",
	"main": "./dist/index.mjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.mts",
	"exports": {
		".": "./dist/index.mjs",
		"./package.json": "./package.json"
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"build": "tsdown --exports --dts --minify",
		"dev": "bun --watch src/index.ts",
		"format": "dprint fmt",
		"lint": "oxlint --fix --type-aware",
		"review": "bun run lint && bun run test && bun run build",
		"test": "vitest",
		"test:coverage": "vitest --coverage",
		"test:ui": "vitest --ui",
		"bench": "vitest bench",
		"wtest": "bun --bun src/cli.ts",
		"clean": "rm -rf dist .tsbuildinfo coverage",
		"prepublishOnly": "bun run clean && bun run build"
	},
	"dependencies": {
		"@wpackages/reporter": "workspace:*"
	},
	"devDependencies": {
		"@types/bun": "1.3.3",
		"@types/node": "^24.10.4",
		"tsdown": "^0.16.8",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16"
	},
	"peerDependencies": {},
	"keywords": [
		"testing",
		"test-framework",
		"unit-testing",
		"e2e-testing",
		"functional-programming",
		"effect-ts",
		"typescript",
		"assertions",
		"test-runner"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/wrikka/wts",
		"directory": "packages/testing"
	},
	"bugs": {
		"url": "https://github.com/wrikka/wts/issues"
	},
	"homepage": "https://github.com/wrikka/wts/tree/main/packages/testing#readme",
	"author": "Wrikka Team",
	"license": "MIT",
	"engines": {
		"node": ">=18.0.0"
	}
}
