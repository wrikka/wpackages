{
	"git": {
		"requireCleanWorkingDir": true,
		"requireUpstream": false,
		"requireCommits": true,
		"commitMessage": "chore(release): ${version} [skip ci]\n\n${changelog}",
		"tagName": "v${version}",
		"requireBranch": "main"
	},
	"github": {
		"release": true,
		"releaseName": "${version}",
		"releaseNotes": "bunx auto-changelog --stdout --commit-limit false -u --template https://raw.githubusercontent.com/release-it/release-it/main/templates/changelog-compact.hbs"
	},
	"npm": {
		"publish": true
	},
	"plugins": {
		"@release-it/conventional-changelog": {
			"infile": "CHANGELOG.md",
			"header": "# Changelog\n\nAll notable changes to this project will be documented in this file.\n\n## [Unreleased]\n\n## [1.0.0] - 2024-05-19",
			"context": {
				"linkCompare": true,
				"linkReferences": true
			},
			"preset": {
				"name": "conventionalcommits",
				"types": [
					{
						"type": "feat",
						"section": "âœ¨ Features"
					},
					{
						"type": "fix",
						"section": "ğŸ› Bug Fixes"
					},
					{
						"type": "perf",
						"section": "âš¡ Performance"
					},
					{
						"type": "refactor",
						"section": "â™»ï¸ Refactor"
					},
					{
						"type": "docs",
						"section": "ğŸ“š Documentation"
					},
					{
						"type": "style",
						"section": "ğŸ’„ Styles"
					},
					{
						"type": "refactor",
						"section": "â™»ï¸ Code Refactoring"
					},
					{
						"type": "test",
						"section": "âœ… Tests"
					},
					{
						"type": "build",
						"section": "ğŸ‘· Build System"
					},
					{
						"type": "ci",
						"section": "ğŸ”§ Continuous Integration"
					},
					{
						"type": "chore",
						"section": "ğŸ§¹ Chores"
					}
				]
			}
		}
	},
	"hooks": {
		"before:init": ["bun run lint"],
		"after:release": "echo 'Successfully released ${name} v${version} to ${repo.repository}.'"
	}
}
