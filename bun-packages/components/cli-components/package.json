{
	"type": "module",
	"name": "@wpackages/cli-components",
	"scripts": {
		"dev": "tsdown --watch",
		"build": "tsdown --exports --dts --minify",
		"lint": "tsc --noEmit && biome lint --write && oxlint --fix --type-aware",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"watch": "bun --watch src/index.ts",
		"format": "dprint fmt"
	},
	"keywords": [
		"tui",
		"terminal",
		"cli",
		"ui",
		"command",
		"prompt",
		"display",
		"interactive",
		"functional",
		"fp-ts"
	],
	"files": [
		"dist",
		"src"
	],
	"dependencies": {
		"@clack/prompts": "^0.11.0",
		"@wpackages/error": "workspace:*",
		"@wpackages/schema": "workspace:*",
		"effect": "^3.19.18",
		"picocolors": "^1.1.1",
		"zod": "4.2.1"
	},
	"description": "Terminal UI toolkit - Unified interface for CLI command, display, and prompts",
	"devDependencies": {
		"@types/bun": "^1.3.9",
		"@types/node": "25.0.3",
		"@vitest/coverage-v8": "4.0.16",
		"execa": "^9.6.1",
		"fast-check": "^4.5.3",
		"rimraf": "6.1.2",
		"tsdown": "^0.18.4",
		"tsup": "^8.5.1",
		"typescript": "^5.9.3",
		"vitest": "4.0.16"
	},
	"version": "1.0.0",
	"types": "./dist/index.d.mts",
	"exports": {
		".": "./dist/index.mjs",
		"./package.json": "./package.json"
	},
	"main": "./dist/index.mjs",
	"module": "./dist/index.mjs"
}
