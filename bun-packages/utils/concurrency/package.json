{
	"name": "@wpackages/concurrency",
	"version": "0.1.0",
	"private": true,
	"description": "Functional concurrency utilities for async operations and parallel processing",
	"type": "module",
	"keywords": [
		"concurrency",
		"async",
		"parallel",
		"functional-programming",
		"typescript"
	],
	"main": "./dist/index.mjs",
	"types": "./dist/index.d.mts",
	"exports": {
		".": "./dist/index.mjs",
		"./package.json": "./package.json"
	},
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"build": "tsdown --dts --minify",
		"dev": "tsdown --watch",
		"test": "vitest run",
		"lint": "tsc --noEmit && oxlint --fix --type-aware",
		"verify": "bun run lint && bun run test && bun run build",
		"watch": "bun --watch src/index.ts",
		"format": "dprint fmt"
	},
	"dependencies": {},
	"devDependencies": {
		"@types/bun": "^1.3.9",
		"@types/node": "^25.2.3",
		"oxlint": "^1.48.0",
		"tsdown": "^0.18.4",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18"
	},
	"module": "./dist/index.mjs"
}
