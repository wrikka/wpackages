{
  "name": "@wpackages/string",
  "version": "1.0.0",
  "description": "Comprehensive string manipulation and validation utilities",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    },
    "./lib": {
      "types": "./dist/lib/index.d.ts",
      "import": "./dist/lib/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js"
    },
    "./constants": {
      "types": "./dist/constants/index.d.ts",
      "import": "./dist/constants/index.js"
    },
    "./error": {
      "types": "./dist/error/index.d.ts",
      "import": "./dist/error/index.js"
    },
    "./config": {
      "types": "./dist/config/index.d.ts",
      "import": "./dist/config/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node --format esm && bun run build:types",
    "build:types": "tsc --emitDeclarationOnly --outDir ./dist",
    "dev": "bun --watch src/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "format": "biome format . --write",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run clean && bun run build && bun run test",
    "docs:generate": "typedoc src/index.ts --out docs",
    "size": "bundlesize"
  },
  "keywords": [
    "string",
    "validation",
    "formatting",
    "manipulation",
    "utilities",
    "typescript",
    "bun"
  ],
  "author": "WPackages Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wpackages/utils",
    "directory": "packages/string"
  },
  "bugs": {
    "url": "https://github.com/wpackages/utils/issues"
  },
  "homepage": "https://github.com/wpackages/utils/tree/main/packages/string#readme",
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/bun": "^1.1.6",
    "@types/node": "^22.5.4",
    "bundlesize": "^0.18.1",
    "typedoc": "^0.26.5",
    "typescript": "^5.5.4"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "bundlesize": [
    {
      "path": "./dist/index.js",
      "maxSize": "10 kB"
    }
  ]
}
