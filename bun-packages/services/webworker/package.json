{
	"name": "@wpackages/worker",
	"version": "0.0.1",
	"description": "Web Worker management for Bun",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"src"
	],
	"scripts": {
		"watch": "bun --watch verify",
		"dev": "bun run src/index.ts",
		"format": "dprint fmt",
		"lint": "tsc --noEmit && biome lint --write && oxlint --fix --type-aware",
		"build": "bun build ./src/index.ts --outdir ./dist --target bun --format esm && tsc --emitDeclarationOnly",
		"test": "vitest",
		"verify": "bun run format && bun run lint && bun run test && bun run build && bun run dev"
	},
	"dependencies": {},
	"devDependencies": {
		"@types/bun": "latest",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18"
	},
	"engines": {
		"bun": ">=1.3.5"
	}
}
