{
	"name": "webserver",
	"version": "0.0.1",
	"description": "High-performance TypeScript web server framework built to surpass Nitro with enhanced features and performance",
	"private": true,
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./src/index.ts",
			"types": "./src/index.ts",
			"default": "./dist/index.js"
		},
		"./types": {
			"import": "./src/types/index.ts",
			"types": "./src/types/index.ts",
			"default": "./dist/types/index.js"
		}
	},
	"files": [
		"dist",
		"src",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"dev": "bun run src/index.ts",
		"build": "bun build src/index.ts --outdir dist --target bun --sourcemap",
		"build:types": "tsc --emitDeclarationOnly",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"test:coverage": "bun test --coverage",
		"lint": "tsc --noEmit && biome lint --write && oxlint --fix --type-aware",
		"format": "dprint fmt",
		"format:check": "dprint check",
		"typecheck": "tsc --noEmit",
		"clean": "rm -rf dist",
		"prepublishOnly": "bun run clean && bun run build && bun run build:types"
	},
	"keywords": [
		"webserver",
		"framework",
		"typescript",
		"bun",
		"performance",
		"api",
		"http",
		"server"
	],
	"dependencies": {
		"@wpackages/logger": "workspace:*",
		"@wpackages/wrouter": "workspace:*"
	},
	"devDependencies": {
		"@types/node": "^25.3.0",
		"bun-types": "^1.3.9",
		"typescript": "^5.9.3"
	},
	"engines": {
		"bun": ">=1.0.0",
		"node": ">=20.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/newkub/wpackages",
		"directory": "bun-packages/services/webserver"
	},
	"bugs": {
		"url": "https://github.com/newkub/wpackages/issues"
	},
	"homepage": "https://github.com/newkub/wpackages/tree/main/bun-packages/services/webserver",
	"license": "MIT",
	"author": "newkub"
}
