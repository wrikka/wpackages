{
	"name": "@wai/evals",
	"version": "0.0.1",
	"description": "Evaluation services for AI responses and benchmarks",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./types": {
			"types": "./dist/types/index.d.ts",
			"import": "./dist/types/index.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "bun build ./src/index.ts --outdir ./dist --target node --format esm && bunx tsc --emitDeclarationOnly",
		"dev": "bun --watch src/index.ts",
		"test": "bun test",
		"lint": "tsc --noEmit && biome lint --write && oxlint --fix --type-aware",
		"type-check": "bunx tsc --noEmit"
	},
	"dependencies": {
		"@wai/types": "workspace:*",
		"@wai/utils": "workspace:*"
	},
	"devDependencies": {
		"@types/node": "^20.19.33",
		"oxlint": "^0.0.0",
		"typescript": "^5.9.3"
	}
}
