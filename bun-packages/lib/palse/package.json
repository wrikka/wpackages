{
	"name": "@wpackages/palse",
	"version": "0.0.1",
	"private": true,
	"engines": {
		"bun": ">=1.3.5"
	},
	"type": "module",
	"description": "Experimental reactive core (signals/effects) aiming to be a better Vue alternative",
	"keywords": [
		"signals",
		"reactivity",
		"effect",
		"computed",
		"functional",
		"typescript"
	],
	"author": "wrikka",
	"license": "MIT",
	"main": "./dist/index.mjs",
	"types": "./dist/index.d.mts",
	"exports": {
		".": "./dist/index.mjs",
		"./package.json": "./package.json"
	},
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"lint": "tsc --noEmit && oxlint --fix --type-aware",
		"test": "bun test",
		"test:coverage": "bun test --coverage",
		"build": "bun build src/index.ts --outdir dist --target bun",
		"verify": "bun run format && bun run lint && bun run test && bun run build",
		"watch": "bun --watch src/index.ts",
		"dev": "bun run src/index.ts",
		"format": "dprint fmt"
	},
	"dependencies": {
		"effect": "^3.19.18"
	},
	"devDependencies": {
		"@types/bun": "^1.3.9",
		"typescript": "^5.9.3"
	},
	"module": "./dist/index.mjs"
}
