{
  "name": "@wpackages/devserver",
  "version": "0.1.0",
  "description": "Bun-native development server with Vite-like features",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./types": {
      "import": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node && bun run build:types",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "dev": "bun --watch src/index.ts",
    "test": "bun test",
    "lint": "bun run lint:biome && bun run lint:types",
    "lint:biome": "biome check src/",
    "lint:types": "tsc --noEmit"
  },
  "dependencies": {
    "@types/bun": "^1.3.9"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.3",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "bun": ">=1.3.9"
  },
  "keywords": [
    "devserver",
    "development",
    "bun",
    "hmr",
    "vite-alternative"
  ],
  "author": "wpackages",
  "license": "MIT"
}
