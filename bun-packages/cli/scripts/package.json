{
	"name": "@wpackages/scripts",
	"version": "0.0.1",
	"description": "Functional script management package for running and managing scripts",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": "./dist/index.js",
		"./package.json": "./package.json"
	},
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"build": "tsdown --exports --dts --minify",
		"dev": "tsdown --watch",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"format": "dprint fmt",
		"lint": "tsc --noEmit && biome lint --write && oxlint --fix --type-aware",
		"verify": "bun run format && bun run lint && bun run test && bun run build",
		"watch": "bun --watch src/index.ts"
	},
	"dependencies": {
		"@wpackages/config-manager": "workspace:*",
		"effect": "^3.19.18"
	},
	"devDependencies": {
		"@types/bun": "^1.3.9",
		"@types/node": "^24.10.13",
		"tsdown": "^0.15.12",
		"typescript": "^5.9.3",
		"vite-tsconfig-paths": "^4.3.2",
		"vitest": "^4.0.18"
	},
	"keywords": [
		"scripts",
		"script-runner",
		"task-runner",
		"functional",
		"typescript"
	],
	"module": "./dist/index.js"
}
