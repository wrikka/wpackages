{
	"name": "@wpackages/bun",
	"description": "A collection of useful Bun macros",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"engines": {
		"bun": ">=1.0.0"
	},
	"scripts": {
		"postinstall": "",
		"watch": "bun --watch verify",
		"dev": "bun --watch src/index.ts",
		"format": "dprint fmt",
		"lint": "tsc --noEmit && oxlint --fix --type-aware",
		"test": "vitest run --passWithNoTests",
		"build": "tsdown",
		"verify": "bun run format && bun audit && bun run lint && bun run test && bun run build"
	},
	"devDependencies": {
		"@types/node": "^25.2.3",
		"tsdown": "^0.18.4",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18"
	},
	"packageManager": "bun@1.3.9"
}
