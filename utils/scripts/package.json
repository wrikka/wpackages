{
	"name": "@wpackages/utils-scripts",
	"version": "0.0.1",
	"description": "Functional script management package for running and managing scripts",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": "./dist/index.js",
		"./package.json": "./package.json"
	},
	"files": ["dist", "README.md"],
	"scripts": {
		"build": "tsdown --exports --dts --minify",
		"dev": "tsdown --watch",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"format": "dprint fmt",
		"lint": "oxlint --fix --type-aware",
		"review": "bun run format && bun run lint && bun run test && bun run build"
	},
	"dependencies": {
		"@wpackages/config-manager": "workspace:*",
		"@wpackages/scripts": "workspace:*",
		"effect": "^3.19.14"
	},
	"devDependencies": {
		"@types/bun": "^1.3.5",
		"@types/node": "^24.10.4",
		"tsdown": "^0.15.12",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16"
	},
	"keywords": [
		"scripts",
		"script-runner",
		"task-runner",
		"functional",
		"typescript"
	],
	"module": "./dist/index.js"
}
