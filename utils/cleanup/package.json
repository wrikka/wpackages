{
	"name": "@wpackages/cleanup",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"bin": {
		"computer-cleanup": "./dist/bin/cli.js"
	},
	"scripts": {
		"watch": "bun lint && bun watch && bun test",
		"start": "bun --watch dev && vitest:ui",
		"dev": "bun run src/index.ts",
		"format": "dprint fmt",
		"lint": "oxlint --fix --type-aware",
		"build": "tsdown src/bin/cli.ts --out-dir dist",
		"test": "vitest --run --config ./vitest.config.ts",
		"verify": "bun format && bun lint && bun test && bun run build"
	},
	"dependencies": {
		"@clack/prompts": "^0.11.0",
		"effect": "^3.19.14",
		"glob": "^13.0.0",
		"picocolors": "^1.1.1",
		"trash": "^10.0.1"
	},
	"devDependencies": {
		"@types/bun": "^1.3.5",
		"@types/glob": "^8.1.0",
		"@types/node": "^25.0.3",
		"tsdown": "^0.18.4",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16"
	},
	"packageManager": "bun@1.3.5"
}
