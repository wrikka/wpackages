{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Modern Full Stack Configuration (2025)",
	"compilerOptions": {
		/* Base Options */
		"module": "esnext",
		"target": "esnext",
		"lib": ["esnext"],
		"jsx": "react-jsx",
		"jsxImportSource": "@emotion/react",
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,
		"types": ["node"],

		/* Build Performance */
		"paths": {
			"@/*": ["./src/*"]
		}
	},

	"include": [
		"**/*.ts",
		"**/*.tsx",
		"**/*.mts",
		"**/*.cts",
		"**/*.vue",
		"**/*.jsx"
	],

	"exclude": [
		"**/node_modules",
		"**/dist",
		"**/build",
		"**/.*",
		"**/*.test.*",
		"**/*.spec.*",
		"**/*.bench.*",
		"**/__tests__/**",
		"**/__mocks__/**",
		"**/coverage/**",
		"**/public/**",
		"**/cypress/**",
		"**/playwright/**",
		"**/storybook-static/**",
		"**/.cache/**",
		"**/.next/**",
		"**/.nuxt/**",
		"**/.svelte-kit/**",
		"**/out/**",
		"**/temp/**",
		"**/tmp/**",
		"**/*.min.*",
		"**/package-lock.json",
		"**/yarn.lock",
		"**/pnpm-lock.yaml"
	],

	"references": []
}
