{
	"name": "@wpackages/string",
	"version": "0.0.1",
	"private": true,
	"description": "String utilities and helpers",
	"type": "module",
	"main": "./src/index.ts",
	"types": "./src/index.ts",
	"exports": {
		".": "./src/index.ts",
		"./package.json": "./package.json"
	},
	"scripts": {
