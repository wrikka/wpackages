{
	"name": "@wpackages/task-runner",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"description": "Advanced command runner with functional programming patterns - better than execa",
	"keywords": [
		"runner",
		"command",
		"process",
		"exec",
		"spawn",
		"shell",
		"functional",
		"typescript",
		"cross-platform"
	],
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": "./dist/index.js",
		"./package.json": "./package.json"
	},
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"build": "tsdown --exports --dts --minify",
		"dev": "tsdown --watch",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"lint": "oxlint --fix --type-aware",
		"verify": "bun run format && bun run lint && bun run test && bun run build"
	},
	"dependencies": {},
	"devDependencies": {
		"@types/bun": "^1.3.5",
		"@types/node": "^24.10.4",
		"tsdown": "^0.15.12",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16"
	},
	"module": "./dist/index.js"
}
